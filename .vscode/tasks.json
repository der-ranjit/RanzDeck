{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RanzDeck/RanzDeck.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "copyDllToMods",
            "command": "copy",
            "type": "shell",
            "args": [
                "/y",
                "${workspaceFolder}\\RanzDeck\\bin\\Debug\\netstandard2.1\\RanzDeck.dll",
                "C:\\Users\\ranjit\\AppData\\Roaming\\r2modmanPlus-local\\ROUNDS\\profiles\\RanzDeck-Dev\\BepInEx\\plugins\\ranz-RanzDeck"
            ],
            "problemMatcher": [],
            "dependsOn": ["build"]
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/RanzDeck/RanzDeck.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/RanzDeck/RanzDeck.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}