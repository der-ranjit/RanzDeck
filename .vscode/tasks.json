{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RanzDeck/RanzDeck.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build Release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RanzDeck/RanzDeck.csproj",
                "/property:GenerateFullPaths=true",
                "-c",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/RanzDeck/RanzDeck.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "copyDll Debug",
            "command": "copy",
            "type": "shell",
            "args": [
                "/y",
                "${workspaceFolder}\\dist\\Debug\\netstandard2.1\\RanzDeck.dll",
                "${env:appdata}\\r2modmanPlus-local\\ROUNDS\\profiles\\RanzDeck-Dev\\BepInEx\\scripts"
            ],
            "problemMatcher": [],
            "dependsOn": ["build Debug"]
        },
        {
            "label": "copyDll Release",
            "command": "copy",
            "type": "shell",
            "args": [
                "/y",
                "${workspaceFolder}\\dist\\Release\\netstandard2.1\\RanzDeck.dll",
                "${workspaceFolder}\\thunderstore-package"
            ],
            "problemMatcher": [],
            "dependsOn": ["build Release"]
        }
    ]
}